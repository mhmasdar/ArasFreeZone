<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:background="@color/darkWhite"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:text="اوقات شرعی به افق جلفا"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:id="@+id/txtSobh"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="اذان صبح "
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:gravity="right"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginRight="15dp"
        android:id="@+id/txttolo"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="طلوع آفتاب "
        android:layout_height="wrap_content" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:id="@+id/txtZohr"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="اذان ظهر"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:id="@+id/txtGhorob"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="غروب آفتاب"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:id="@+id/txtMaghreb"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="اذان مغرب"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:id="@+id/txtNimeShab"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="نیمه شب شرعی"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_back_exit"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="بستن"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="13sp" />


    </LinearLayout>

</LinearLayout>