<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:paddingBottom="15dp"
    android:gravity="right"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txtQuestion"
        android:text="به نظر شما ایران از گروه خودش صعود می کند؟"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/lytOption1"
        android:layout_marginTop="12dp"
        android:gravity="right|center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txtOption1"
            android:text="گزینه اول"
            android:textSize="15sp"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_width="wrap_content"
            android:id="@+id/radioOption1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:layout_marginLeft="5dp"
            android:buttonTint="@color/colorPrimary"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lytOption2"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="right|center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txtOption2"
            android:text="گزینه دوم"
            android:textSize="15sp"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_width="wrap_content"
            android:id="@+id/radioOption2"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:layout_marginLeft="5dp"
            android:buttonTint="@color/colorPrimary"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lytOption3"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="right|center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txtOption3"
            android:text="گزینه سوم"
            android:textSize="15sp"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_width="wrap_content"
            android:id="@+id/radioOption3"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:layout_marginLeft="5dp"
            android:buttonTint="@color/colorPrimary"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lytOption4"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="right|center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txtOption4"
            android:text="گزینه چهارم"
            android:textSize="15sp"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_width="wrap_content"
            android:id="@+id/radioOption4"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:layout_marginLeft="5dp"
            android:buttonTint="@color/colorPrimary"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/itmesShadow"
        android:layout_height="0.5dp"></LinearLayout>


</LinearLayout>