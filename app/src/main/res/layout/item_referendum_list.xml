<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:paddingBottom="25dp"
    android:gravity="right"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txtQuestion"
        android:text="گزینه ها"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="right"
        android:visibility="gone"
        android:id="@+id/lytRefList"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="3dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txtOption1"
                    android:gravity="center"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txtOption2"
                    android:gravity="center"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txtOption3"
                    android:gravity="center"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txtOption4"
                    android:gravity="center"
                    android:layout_height="40dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:id="@+id/radioGroup"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/radio1"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_height="40dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/radio2"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_height="40dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/radio3"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_height="40dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/radio4"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_height="40dp" />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/itmesShadow"
            android:layout_height="0.5dp"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:id="@+id/lytRefResults"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="65%"
                android:textColor="@color/colorPrimary"
                android:id="@+id/txtPercent"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/progress"
                android:max="100"
                android:progress="65"
                android:scaleY="3.0"
                android:background="@drawable/progress_back"
                android:progressDrawable="@drawable/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>