<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.arka.arasfreezone1.fragments.newsDetailsFragment">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">


        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txtCatTitle"
                    android:text="جزئیات رویداد"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content" />


                <RelativeLayout
                    android:id="@+id/relativeBack"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_back"
                        android:layout_height="22dp" />

                </RelativeLayout>


            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgTitle"
            android:layout_width="match_parent"
            android:src="@drawable/test"
            android:layout_weight="0.8"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:padding="7dp"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:gravity="center"
                android:text="برگزاری میزگرد تخصصی فعالیت های دانش بنیان ارس در نمایشگاه رینو"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="شروع رویداد"
                android:textColor="@color/mainBarText"
                android:textSize="12sp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnAddtoCalender"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@color/yellow"
                    android:text="افزودن به تقویم گوشی"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:gravity="right|center_vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtStartDate"
                        android:layout_width="wrap_content"
                        android:text="جمعه 26 آبان 96"
                        android:textColor="@color/mainBarText"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/ic_event_details"
                        android:layout_height="20dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="پایان رویداد"
                android:textColor="@color/mainBarText"
                android:textSize="12sp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnAddtoGoogle"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@color/yellow"
                    android:text="افزودن به تقویم گوگل"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:gravity="right|center_vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtEndtDate"
                        android:layout_width="wrap_content"
                        android:text="جمعه 26 آبان 96"
                        android:textColor="@color/mainBarText"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/ic_event_details"
                        android:layout_height="20dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="35dp"
                        android:id="@+id/imgShare"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/ic_share1"
                        android:padding="8dp"
                        android:layout_centerInParent="true"
                        android:layout_height="35dp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:id="@+id/imgBookmark"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/ic_bookmark1"
                        android:padding="8dp"
                        android:layout_centerInParent="true"
                        android:layout_height="35dp" />

                    <com.like.LikeButton
                        android:layout_width="30dp"
                        android:id="@+id/btnLike"
                        app:unlike_drawable="@drawable/ic_love"
                        app:like_drawable="@drawable/ic_like1"
                        app:icon_size="20dp"
                        app:icon_type="heart"
                        android:layout_height="30dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:gravity="right|center_vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="wrap_content"
                        android:text="جلفا - خیابان اصلی - فلکه بزرگ"
                        android:textColor="@color/mainBarText"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/ic_location"
                        android:layout_height="20dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.8"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="توضیحات"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:scrollbars="none"
                        android:fillViewport="true"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/txtInfo"
                            android:textColor="#a7b5b6"
                            android:layout_gravity="right"
                            android:text="@string/s3"
                            android:lineSpacingMultiplier="1.2"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:layout_height="wrap_content" />

                    </ScrollView>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
