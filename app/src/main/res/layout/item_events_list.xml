<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/backImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/test"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#9d252525"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txtSliderName"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:text="برگزاری میزگرد تخصصی فعالیت های دانش بنیان   در نمایشگاه رینوتک"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="13sp"
            android:text="زمان : 96/9/22"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:paddingRight="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txtSliderDetail"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:text="مکان : جلفا - خیابان اصلی"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:paddingRight="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:id="@+id/imgShare"
                android:src="@drawable/ic_share1"
                android:padding="10dp"
                android:layout_centerInParent="true"
                android:layout_height="40dp" />

            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/ic_bookmark"
                android:padding="10dp"
                android:layout_centerInParent="true"
                android:layout_height="40dp" />

            <!--<com.like.LikeButton-->
                <!--android:layout_width="30dp"-->
                <!--android:id="@+id/btnLike"-->
                <!--app:icon_size="21dp"-->
                <!--app:icon_type="heart"-->
                <!--android:layout_height="30dp" />-->


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>